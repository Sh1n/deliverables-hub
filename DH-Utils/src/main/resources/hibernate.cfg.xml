<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
    <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
    <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/deliverables_hub</property>
    <property name="hibernate.connection.username">root</property>
    <property name="hibernate.show_sql">true</property>
    <property name="hibernate.current_session_context_class">thread</property>
    <mapping class="com.gmail.shinsensei.deliverablesHub.entities.SystemUser" />
    <mapping class="com.gmail.shinsensei.deliverablesHub.entities.Person" />
    <mapping class="com.gmail.shinsensei.deliverablesHub.entities.Course" />
    <mapping class="com.gmail.shinsensei.deliverablesHub.entities.Project" />
    <mapping class="com.gmail.shinsensei.deliverablesHub.entities.Deliverable" />
    <mapping class="com.gmail.shinsensei.deliverablesHub.entities.Team" />
    <mapping class="com.gmail.shinsensei.deliverablesHub.entities.TeamDeliverable" />
    <!--<mapping class="com.gmail.shinsensei.deliverablesHub.entities.Professor" />
    <mapping class="com.gmail.shinsensei.deliverablesHub.entities.Student" />
    
    <mapping resource="com/gmail/shinsensei/deliverablesHub/entities/Teams.hbm.xml"/>
    <mapping resource="com/gmail/shinsensei/deliverablesHub/entities/TeamDeliverables.hbm.xml"/>
    <mapping resource="com/gmail/shinsensei/deliverablesHub/entities/ProfilePictures.hbm.xml"/>
    -->
  </session-factory>
</hibernate-configuration>
