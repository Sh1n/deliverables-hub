<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
    <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
    <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/deliverables_hub</property>
    <property name="hibernate.connection.username">root</property>
    <property name="hibernate.show_sql">true</property>
    <property name="hibernate.current_session_context_class">thread</property>
    <mapping resource="com/gmail/shinsensei/deliverablesHub/entities/Teams.hbm.xml"/>
    <mapping resource="com/gmail/shinsensei/deliverablesHub/entities/SystemUsers.hbm.xml"/>
    <mapping resource="com/gmail/shinsensei/deliverablesHub/entities/Deliverables.hbm.xml"/>
    <mapping resource="com/gmail/shinsensei/deliverablesHub/entities/Persons.hbm.xml"/>
    <mapping resource="com/gmail/shinsensei/deliverablesHub/entities/TeamDeliverables.hbm.xml"/>
    <mapping resource="com/gmail/shinsensei/deliverablesHub/entities/Courses.hbm.xml"/>
    <mapping resource="com/gmail/shinsensei/deliverablesHub/entities/Projects.hbm.xml"/>
    <mapping resource="com/gmail/shinsensei/deliverablesHub/entities/ProfilePictures.hbm.xml"/>
  </session-factory>
</hibernate-configuration>
